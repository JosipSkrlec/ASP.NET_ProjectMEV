@using Vjezba.Model
@model string[]

<table style="margin-top: 20px;" class="table table-condensed">
    <thead>
        <tr>
            <th>ime PDF-a</th>
            <th>Action</th>
            @*<th>Oznaka</th>*@
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ToString()</td>
            <td>
                <a asp-controller="Racun" asp-action="ShowPDF" asp-route-pdfPath="@item.ToString()">[prikaži PDF]</a>
            </td>

        </tr>}
    </tbody>
</table>